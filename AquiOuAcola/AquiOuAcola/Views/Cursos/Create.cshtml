@model AquiOuAcola.Models.Curso

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="text-center">Compartilhe um curso!</h1>

    <form asp-action="Create">
        <div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="d-flex">
                    <div class="col-md-2">
                        <img src="~/src/FotoDePerfil.png" style="width: 150px;" />
                    </div>
                    <div class="col-8">
                        <div class="form-group">
                            <label asp-for="nome" class="control-label">Nome</label>
                            <input asp-for="nome" class="form-control" />
                            <span asp-validation-for="nome" class="text-danger"></span>
                        </div>
                        <div class="d-flex">
                            <div class="form-group">
                                <label asp-for="disponibilidade" class="control-label">Disponibilidade</label>
                                <input asp-for="disponibilidade" class="form-control" />
                                <span asp-validation-for="disponibilidade" class="text-danger"></span>
                            </div>
                            <div>
                                <label asp-for="preco" class="control-label">Gratuito</label>
                                <input type="radio" name="preco" value="sim" /> Sim
                                <input type="radio" name="preco" value="nao" /> Não
                            </div>
                        </div>
                        <div>
                            <div class="form-group">
                                <label asp-for="link" class="control-label">Link</label>
                                <input asp-for="link" class="form-control" />
                                <span asp-validation-for="link" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="d-block">
                    <div class="col-md-10">
                        <div class="form-group">
                            <label asp-for="descricao" class="control-label">Descrição</label>
                            <input asp-for="descricao" class="form-control" />
                            <span asp-validation-for="descricao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div>
                            <label asp-for="nivel" class="control-label">Nível</label>
                            <input type="radio" name="nivel" value="iniciante" /> Iniciante
                            <input type="radio" name="nivel" value="intermediario" /> Intermediário
                            <input type="radio" name="nivel" value="avancado" /> Avançado
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>

        <div class="row">
            <div class="d-flex justify-content-between" style="margin-top: 50px">
                <div class="text-center" id="botao2">
                    <i class="bi bi-arrow-left"></i>
                    <input type="submit" value="Voltar para o Perfil" style="padding-left: 10px;" />
                </div>

                <div class="text-center" id="botao1">
                    <input type="submit" value="Compartilhar Curso" style="padding-right: 10px;" />
                    <i class="bi bi-arrow-right"></i>
                </div>
            </div>
        </div>
    </form>

    <footer></footer>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
