@model AquiOuAcola.Models.Usuario

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="text-center">Faça parte do buscador!</h1>

    <form class="row" asp-action="cadastrarUsuario">

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome</label>
                <input asp-for="nome" class="form-control input" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sobrenome" class="control-label">Sobrenome</label>
                <input asp-for="sobrenome" class="form-control input" />
                <span asp-validation-for="sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cidade" class="control-label">Cidade</label>
                <input asp-for="cidade" class="form-control input" />
                <span asp-validation-for="cidade" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="email" class="control-label">E-mail</label>
                <input asp-for="email" class="form-control input" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="senha" class="control-label">Senha</label>
                <input asp-for="senha" class="form-control input" />
                <span asp-validation-for="senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Confirme a senha</label>
                <input class="form-control input" />
                <span class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
