@model AquiOuAcola.Models.Usuario

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col col-lg-1"></div>
        <div class="col col-12 col-lg-10 col-sm-12 col-xxl-12">
            <div class="text-center">
                <h1>Faça parte do buscador!</h1>
                <form asp-action="cadastrarUsuario">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!--
                    <div class="form-group">
                        <label asp-for="codigo" class="control-label">Código</label>
                        <input asp-for="codigo" class="form-control input" />
                        <span asp-validation-for="codigo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="foto" class="control-label">Foto</label>
                        <input asp-for="foto" class="form-control input" />
                        <span asp-validation-for="foto" class="text-danger"></span>
                    </div>
                    -->

                    <div id="formdisplay">
                        <div>
                            <div class="form-group">
                                <label asp-for="nome" class="control-label">Nome</label>
                                <input asp-for="nome" class="form-control input" />
                                <span asp-validation-for="nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="sobrenome" class="control-label">Sobrenome</label>
                                <input asp-for="sobrenome" class="form-control input" />
                                <span asp-validation-for="sobrenome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="cidade" class="control-label">Cidade</label>
                                <input asp-for="cidade" class="form-control input" />
                                <span asp-validation-for="cidade" class="text-danger"></span>
                            </div>
                        </div>

                        <div>
                            <div class="form-group">
                                <label asp-for="email" class="control-label">E-mail</label>
                                <input asp-for="email" class="form-control input" />
                                <span asp-validation-for="email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="senha" class="control-label">Senha</label>
                                <input asp-for="senha" class="form-control input" />
                                <span asp-validation-for="senha" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Confirme a senha</label>
                                <input class="form-control input" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col col-lg-1"></div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
